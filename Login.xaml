<Page x:Class="QuizAndresBonilla.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizAndresBonilla"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="790"
      Title="Login">

    <Grid Background="#FFDEFFB7">
        <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="329,97,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="329,0,0,0" VerticalAlignment="Center"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Center" Margin="0,123,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnLogin" Content="Log in" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Width="70" Height="23" Click="btnLogin_Click"/>
    </Grid>
</Page>
